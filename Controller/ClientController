<?php

// Cette méthode permet de récupérer tous les utilisateurs
public function getClients(): JsonResponse
{
    // Récupérer tous les utilisateurs
    $clients = $this->getDoctrine()->getRepository(Client::class)->findAll();

    // Vérifier si des utilisateurs existent
    if (!$clients) {
        return new JsonResponse(['message' => 'Aucun client trouvé'], JsonResponse::HTTP_NOT_FOUND);
    }

    // Afficher les informations de tous les utilisateurs
    $jsonData = $serializer->serialize($clients, 'json', SerializationContext::create());

    return new JsonResponse($jsonData, JsonResponse::HTTP_OK, [], true);
}

